{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "node",
      "outDir": "./dist", 
      "rootDir": "./server/src", 
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "allowJs": true,
      "resolveJsonModule": true
    },
    "include": ["server/src/**/*.ts"], 
    "exclude": ["node_modules", "dist"]
  }
  
  



