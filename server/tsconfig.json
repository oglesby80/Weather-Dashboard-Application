{
  "compilerOptions": {
    "target": "ES2020",                      
    "module": "ESNext",                       
    "outDir": "dist",                       
    "rootDir": "src",                         
    "strict": true,                            // Enable all strict type-checking options
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,  // Ensure consistent casing in import paths
    "skipLibCheck": true,
    "moduleResolution": "node",                // Use Node.js module resolution
    "noEmitOnError": true                      // Prevent emitting output if there are errors
  },
  "include": ["src"],                        
  "exclude": ["node_modules", "dist", "client/dist"] 
}
