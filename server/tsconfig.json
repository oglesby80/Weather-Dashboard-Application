{
  "compilerOptions": {
    "target": "ES2020", // Target a recent version of ECMAScript
    "module": "ESNext", // Use ESNext for module resolution
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Specify the root directory of input files
    "esModuleInterop": true, // Allows interop between CommonJS and ES Modules
    "skipLibCheck": true, // Skips type checking for all declaration files
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in imports
    "strict": true // Enable all strict type checking options
  },
  "include": ["server/src/**/*.ts"],  // Include all TypeScript files in the src directory
  "exclude": ["node_modules", "dist", "client/dist"] // Exclude output directories and node_modules
}
